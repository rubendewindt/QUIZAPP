<Window x:Class="QUIZAPP.pagina2"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="pagina2" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#3F51B5" Offset="0.1"/>
                <GradientStop Color="#2196F3" Offset="0.9"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- Category -->
        <TextBlock x:Name="CategoryTextBlock" Margin="10" FontSize="16" Height="30" Background="White"/>

        <!-- Question -->
        <TextBlock x:Name="QuestionTextBlock" Margin="10,50,0,0" FontSize="16" Height="30" Background="White"/>

        <!-- StackPanel to contain radio buttons -->
        <StackPanel x:Name="OptionsStackPanel" Margin="10,100,10,0"/>

        <!-- Difficulty -->
        <TextBlock x:Name="DifficultyTextBlock" Margin="10,250,0,0" FontSize="16" Height="30" Background="White"/>

        <!-- Correct Answer -->
        <TextBlock x:Name="CorrectAnswerTextBlock" Margin="10,300,0,0" FontSize="16" Height="30" Background="White"/>
    </Grid>
</Window>

